FROM node:22-alpine

WORKDIR /app

RUN npm install -g npm@11.7.0 && apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY shared/package*.json ./shared/
COPY frontend/package*.json ./frontend/
COPY backend/package*.json ./backend/

# Install all dependencies
RUN npm install

# Build shared package once on startup
ENTRYPOINT ["/bin/sh", "-c"]
CMD ["npm run build:shared && npm run dev"]
